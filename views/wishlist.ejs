<h2>Your Wishlist</h2>
<% if (products.length === 0) { %>
  <p>Your wishlist is empty.</p>
<% } else { %>
  <ul>
    <% products.forEach(p => { %>
      <li>
        <strong><%= p.name %></strong> - $<%= p.price %>
        <form action="/wishlist/remove/<%= p._id %>" method="POST" style="display:inline;">
          <button type="submit" title="Remove">❌</button>
        </form>
      </li>
    <% }) %>
  </ul>
<% } %>
