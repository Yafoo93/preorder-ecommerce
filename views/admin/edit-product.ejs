<h2>Edit Product</h2>

<form action="/admin/products/<%= product._id %>" method="POST">
  <label>Product Name:</label><br />
  <input type="text" name="name" value="<%= product.name %>" required /><br /><br />

  <label>Description:</label><br />
  <textarea name="description" rows="3"><%= product.description %></textarea><br /><br />

  <label>Category:</label><br />
  <input type="text" name="category" value="<%= product.category %>" /><br /><br />

  <label>Price:</label><br />
  <input type="number" name="price" value="<%= product.price %>" step="0.01" required /><br /><br />

  <label>Image URL:</label><br />
  <input type="text" name="image" value="<%= product.image %>" /><br /><br />

  <button type="submit">âœ… Save Changes</button>
</form>
